        <div class="panel panel-info">
            <div class="panel-heading">
                <h4>@Html.DisplayFor(model => model.fname) @Html.DisplayFor(model => model.lname)</h4>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.MembershipID)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MembershipID)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.fname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.fname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.lname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.lname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.mobile)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.mobile)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.dob)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.dob)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.anniversary)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.anniversary)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.mexpirydate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.mexpirydate)
                    </dd>

                    <dt>
