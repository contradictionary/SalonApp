@model sqlexpressmvc.Models.UsedProducts

@{
    ViewBag.Title = "UpdateVolume";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Update Volume</h4>
<hr />
@using (Html.BeginForm("UpdateVolume", "UsedProducts", FormMethod.Post, new { newVolume = ViewBag.newVolume }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">   
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UsedProductsID)
        @Html.HiddenFor(model => model.StockID)
        @*//@Html.HiddenFor(model => model.EmployeesID)*@
        @Html.HiddenFor(model => model.Usedqty)  
        @Html.HiddenFor(model => model.Usedvolume)
        @Html.HiddenFor(model => model.dateAdded)
                   

        <div class="col-lg-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.DisplayFor(model => model.Stock.FullName)
                </div>

                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeesID, "EmployeesID", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("EmployeesID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EmployeesID, "", new { @class = "text-danger" })
                        </div>
                    </div> 
                    <div class="form-control">
                        Current Volume : @Html.DisplayFor(model => model.Usedvolume)
                    </div>
                    <div class="form-control">
                        Update Volume : @Html.TextBox("newVolume")<br />
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" value="Save" class="btn btn-danger" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>

 
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
